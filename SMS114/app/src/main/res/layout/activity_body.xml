<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="hupays_nenich.com.sms114.body.BodyActivity"
    android:background="#ffffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/emplacement_douloureux"
        android:id="@+id/txtBody"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30sp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutBody"
        android:layout_below="@+id/txtBody"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp">

        <ToggleButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text=" "
            android:id="@+id/btnTete"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:checked="false"
            android:textOff=" "
            android:textOn=" "
            android:background="@drawable/tete_body" />

        <ToggleButton
            android:layout_width="100dp"
            android:layout_height="77dp"
            android:text=" "
            android:id="@+id/btnTorse"
            android:layout_below="@+id/btnTete"
            android:layout_centerHorizontal="true"
            android:checked="false"
            android:textOff=" "
            android:textOn=" "
            android:background="@drawable/torse_body" />

        <ToggleButton
            android:layout_width="40dp"
            android:layout_height="130dp"
            android:text=" "
            android:id="@+id/btnBrasDroit"
            android:checked="false"
            android:textOff=" "
            android:textOn=" "
            android:layout_alignTop="@+id/btnTorse"
            android:layout_toLeftOf="@+id/btnTorse"
            android:layout_toStartOf="@+id/btnTorse"
            android:background="@drawable/bras_droit_body" />

        <ToggleButton
            android:layout_width="40dp"
            android:layout_height="130dp"
            android:text=" "
            android:id="@+id/btnBrasGauche"
            android:layout_alignTop="@+id/btnTorse"
            android:layout_toRightOf="@+id/btnTorse"
            android:layout_toEndOf="@+id/btnTorse"
            android:checked="false"
            android:textOff=" "
            android:textOn=" "
            android:background="@drawable/bras_gauche_body" />

        <ToggleButton
            android:layout_width="90dp"
            android:layout_height="77dp"
            android:text=" "
            android:id="@+id/btnVentre"
            android:checked="false"
            android:textOff=" "
            android:textOn=" "
            android:background="@drawable/ventre_body"
            android:layout_below="@+id/btnTorse"
            android:layout_centerHorizontal="true" />

        <ToggleButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text=" "
            android:id="@+id/btnMainDroite"
            android:checked="false"
            android:textOff=" "
            android:textOn=" "
            android:background="@drawable/main_droite_body"
            android:layout_below="@+id/btnBrasDroit"
            android:layout_alignRight="@+id/btnBrasDroit"
            android:layout_alignEnd="@+id/btnBrasDroit" />

        <ToggleButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text=" "
            android:id="@+id/btnMainGauche"
            android:checked="false"
            android:textOff=" "
            android:textOn=" "
            android:background="@drawable/main_gauche_body"
            android:layout_alignTop="@+id/btnMainDroite"
            android:layout_alignLeft="@+id/btnBrasGauche"
            android:layout_alignStart="@+id/btnBrasGauche" />

        <ToggleButton
            android:layout_width="40dp"
            android:layout_height="130dp"
            android:text=" "
            android:id="@+id/btnJambeDroite"
            android:checked="false"
            android:textOn=" "
            android:textOff=" "
            android:layout_below="@+id/btnVentre"
            android:layout_alignLeft="@+id/btnVentre"
            android:layout_alignStart="@+id/btnVentre"
            android:background="@drawable/jambe_droite_body" />

        <ToggleButton
            android:layout_width="40dp"
            android:layout_height="130dp"
            android:text=" "
            android:id="@+id/btnJambeGauche"
            android:checked="false"
            android:textOff=" "
            android:textOn=" "
            android:layout_below="@+id/btnVentre"
            android:layout_alignRight="@+id/btnVentre"
            android:layout_alignEnd="@+id/btnVentre"
            android:background="@drawable/jambe_gauche_body" />

        <ToggleButton
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:text=" "
            android:id="@+id/btnPiedDroit"
            android:checked="false"
            android:textOff=" "
            android:textOn=" "
            android:background="@drawable/pied_droit_body"
            android:layout_below="@+id/btnJambeDroite"
            android:layout_alignRight="@+id/btnJambeDroite"
            android:layout_alignEnd="@+id/btnJambeDroite" />

        <ToggleButton
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:text=" "
            android:id="@+id/btnPiedGauche"
            android:checked="false"
            android:textOff=" "
            android:textOn=" "
            android:background="@drawable/pied_gauche_body"
            android:layout_below="@+id/btnJambeGauche"
            android:layout_alignLeft="@+id/btnJambeGauche"
            android:layout_alignStart="@+id/btnJambeGauche" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutBody"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:text="@string/symptome"
            android:id="@+id/btnRetourSymptome"
            android:background="@drawable/bouton_nav"
            android:drawableLeft="@drawable/retour"
            android:textSize="18sp"
            android:textColor="#ffffffff"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:text="@string/precision"
            android:id="@+id/btnVersPrecision"
            android:drawableRight="@drawable/suivant"
            android:background="@drawable/bouton_nav"
            android:textColor="#ffffffff"
            android:textSize="18sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</RelativeLayout>
