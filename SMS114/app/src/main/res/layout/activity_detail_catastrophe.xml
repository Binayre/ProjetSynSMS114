<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="hupays_nenich.com.sms114.causes.DetailCatastropheActivity"
    android:background="#ffffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Catastrophes naturelles"
        android:id="@+id/txtCatNat"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout4"
        android:layout_below="@+id/txtCatNat"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="38dp" >

            <ToggleButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/btnInondation"
                android:layout_gravity="center_vertical|left"
                android:checked="false"
                android:text="@string/inondation"
                android:textAllCaps="false"
                android:textOff="@string/inondation"
                android:textOn="@string/inondation"
                android:layout_marginRight="20dp"
                android:background="@drawable/bouton_icon"
                android:layout_marginLeft="20dp"
                android:drawableTop="@drawable/inondation"
                android:padding="2dp" />

            <ToggleButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="@string/vent_violent"
                android:id="@+id/btnVentViolent"
                android:layout_gravity="center_vertical"
                android:textOff="@string/vent_violent"
                android:textOn="@string/vent_violent"
                android:checked="false"
                android:layout_marginRight="20dp"
                android:background="@drawable/bouton_icon"
                android:drawableTop="@drawable/vent_violent"
                android:padding="2dp" />

            <ToggleButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="@string/volcan"
                android:id="@+id/btnVolcan"
                android:textOff="@string/volcan"
                android:textOn="@string/volcan"
                android:checked="false"
                android:background="@drawable/bouton_icon"
                android:singleLine="true"
                android:drawableTop="@drawable/volcan"
                android:padding="2dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="20dp" >

            <ToggleButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="@string/avalanche"
                android:id="@+id/btnAvalanche"
                android:layout_gravity="center_vertical"
                android:textOff="@string/avalanche"
                android:textOn="@string/avalanche"
                android:checked="false"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="130dp"
                android:background="@drawable/bouton_icon"
                android:drawableTop="@drawable/avalanche"
                android:padding="2dp" />

            <ToggleButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="@string/seisme"
                android:id="@+id/btnSeisme"
                android:textOff="@string/seisme"
                android:textOn="@string/seisme"
                android:background="@drawable/bouton_icon"
                android:checked="false"
                android:drawableTop="@drawable/seisme"
                android:padding="2dp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout4"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:text="@string/causes"
            android:id="@+id/btnRetourCauses"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:drawableLeft="@drawable/retour"
            android:background="@drawable/bouton_nav"
            android:textColor="#ffffffff"
            android:textSize="18sp" />

        <Button
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:text="@string/nb_victime"
            android:id="@+id/btnNbVictime"
            android:layout_alignTop="@+id/btnRetourCauses"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:drawableRight="@drawable/suivant"
            android:background="@drawable/bouton_nav"
            android:textColor="#ffffffff"
            android:textSize="18sp"
            android:enabled="false" />
    </RelativeLayout>
</RelativeLayout>
