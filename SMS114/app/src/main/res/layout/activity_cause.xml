<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="hupays_nenich.com.sms114.causes.CauseActivity"
    android:background="#ffffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cause"
        android:id="@+id/txtCause"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30sp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/txtCause"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/accident_route"
            android:id="@+id/btnAccidentRoute"
            android:layout_gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:drawableLeft="@drawable/accident_de_la_route"
            android:textSize="20sp"
            android:background="@drawable/bouton_icon"
            android:padding="6dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/incendie"
            android:id="@+id/btnIncendie"
            android:layout_below="@+id/btnAccidentRoute"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:drawableLeft="@drawable/incendie"
            android:textSize="20sp"
            android:background="@drawable/bouton_icon"
            android:padding="6dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/blessures_animales"
            android:id="@+id/btnBlessuresAnimales"
            android:layout_below="@+id/btnIncendie"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:drawableLeft="@drawable/blessures_animales"
            android:textSize="20sp"
            android:background="@drawable/bouton_icon"
            android:padding="6dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/Cat_nat"
            android:id="@+id/btnCatastrophes"
            android:layout_below="@+id/btnBlessuresAnimales"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:textSize="20sp"
            android:drawableLeft="@drawable/catastrophes_naturelles"
            android:background="@drawable/bouton_icon"
            android:padding="6dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/autres"
            android:id="@+id/btnAutresCauses"
            android:layout_below="@+id/btnCatastrophes"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:drawableLeft="@drawable/autres"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:background="@drawable/bouton_icon"
            android:padding="6dp" />

        <Button
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:text="@string/accueil"
            android:id="@+id/btnRetourAccueil"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_alignParentEnd="false"
            android:layout_alignParentLeft="true"
            android:background="@drawable/bouton_nav"
            android:drawableLeft="@drawable/retour"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textColor="#ffffffff" />
    </RelativeLayout>
</RelativeLayout>
