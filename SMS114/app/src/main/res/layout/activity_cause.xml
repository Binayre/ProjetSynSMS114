<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="hupays_nenich.com.sms114.causes.CauseActivity"
    android:background="#ffffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cause"
        android:id="@+id/txtCause"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30sp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtCause"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout9"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:text="@string/accident_route"
                android:id="@+id/btnAccidentRoute"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bouton_icon"
                android:padding="6dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginRight="10dp"
                android:drawableTop="@drawable/accident_de_la_route"
                android:layout_marginLeft="20dp"
                android:textSize="14sp" />

            <Button
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:text="@string/incendie"
                android:id="@+id/btnIncendie"
                android:background="@drawable/bouton_icon"
                android:padding="6dp"
                android:drawableTop="@drawable/incendie"
                android:layout_marginRight="10dp"
                android:textSize="14sp" />

            <Button
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:text="@string/blessures_animales"
                android:id="@+id/btnBlessuresAnimales"
                android:background="@drawable/bouton_icon"
                android:padding="6dp"
                android:layout_below="@+id/btnAccidentRoute"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:drawableTop="@drawable/blessures_animales"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <Button
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:text="@string/Cat_nat"
                android:id="@+id/btnCatastrophes"
                android:layout_below="@+id/btnBlessuresAnimales"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bouton_icon"
                android:padding="6dp"
                android:drawableTop="@drawable/catastrophes_naturelles"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:textSize="14sp" />

            <Button
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:text="@string/autres"
                android:id="@+id/btnAutresCauses"
                android:background="@drawable/bouton_icon"
                android:padding="6dp"
                android:drawableTop="@drawable/autres"
                android:layout_marginRight="10dp"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:text="@string/accueil"
            android:id="@+id/btnRetourAccueil"
            android:background="@drawable/bouton_nav"
            android:drawableLeft="@drawable/retour"
            android:textSize="18sp"
            android:textColor="#ffffffff"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</RelativeLayout>
